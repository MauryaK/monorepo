{
    "extends": "@repo/typescript-config/base.json",
    "compilerOptions": {
        "lib": [
            "ES2022"
        ],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": ".",
        "target": "ES2022",
        "types": [
            "jest",
            "node"
        ]
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}